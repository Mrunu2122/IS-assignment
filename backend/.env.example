# ====================================
# Application Configuration
# ====================================
NODE_ENV=development
PORT=5000

# ====================================
# JWT Authentication
# ====================================
JWT_SECRET=your_secure_jwt_secret_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_secure_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=30d

# ====================================
# Database Configuration
# ====================================
# Development (SQLite)
DATABASE_URL="file:./dev.db"

# Production (PostgreSQL) - Uncomment and update for production
# DATABASE_URL="postgresql://user:password@hostname:5432/dbname?schema=public"

# ====================================
# CORS Configuration
# ====================================
CORS_ORIGIN=*
# For production, specify your frontend URL:
# CORS_ORIGIN=https://your-frontend-domain.com

# ====================================
# Security Headers
# ====================================
HELMET_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100

# ====================================
# Logging
# ====================================
LOG_LEVEL=info  # error, warn, info, http, verbose, debug, silly
LOG_TO_FILE=false

# ====================================
# Application Settings
# ====================================
# Default user role for new signups
DEFAULT_USER_ROLE=USER

# Password reset token expiration (in minutes)
PASSWORD_RESET_EXPIRES=30

# ====================================
# Email Configuration (Optional)
# ====================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-email-password
# EMAIL_FROM="Notes App <noreply@notesapp.com>"

# ====================================
# API Documentation
# ====================================
API_DOCS_ENABLED=true
API_DOCS_PATH=/api-docs

# ====================================
# Monitoring (Optional)
# ====================================
# SENTRY_DSN=your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-new-relic-key

# ====================================
# Feature Flags
# ====================================
FEATURE_MAINTENANCE_MODE=false
FEATURE_SIGNUP_ENABLED=true
FEATURE_PASSWORD_RESET=true
